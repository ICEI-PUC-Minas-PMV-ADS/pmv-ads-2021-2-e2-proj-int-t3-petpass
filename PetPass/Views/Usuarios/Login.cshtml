@model PetPass.Models.Usuario

@{
    ViewData["Title"] = "Login";
}

<h2 class="text-center" style="transform:translateX(-1.5%);">Login</h2>
<br>

<div class="row centralizar">
    <div class="col-md-4 text-center">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" placeholder="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" placeholder="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Entrar" class="btn" />
                <a asp-controller="Home" asp-action="Index" class="btn">Voltar</a>
            </div>
        </form>

        <h4> @ViewBag.Message </h4>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
